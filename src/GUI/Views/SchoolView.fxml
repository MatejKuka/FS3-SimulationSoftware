<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="600.0" prefWidth="840.0" styleClass="bg-secondary" stylesheets="@../../resources/main.css" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.Controllers.SchoolController">
   <children>
      <HBox prefHeight="600.0" prefWidth="840.0" spacing="50.0">
         <children>
            <VBox prefHeight="540.0" prefWidth="453.0">
               <children>
                  <Label fx:id="labelNameView" styleClass="text-primary" text="Schools">
                     <font>
                        <Font name="System Bold" size="25.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <TableView fx:id="tableViewSchools" onMouseClicked="#toShowUser" prefHeight="500.0" prefWidth="460.0" stylesheets="@../../resources/custom-tableview.css" VBox.vgrow="ALWAYS">
                    <columns>
                      <TableColumn fx:id="tableColName" prefWidth="94.0" text="Name" />
                      <TableColumn fx:id="tableColCity" prefWidth="108.0" text="City" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </children>
            </VBox>
            <VBox prefWidth="266.0" spacing="20.0" HBox.hgrow="ALWAYS">
               <children>
                  <Button fx:id="btnCreate" mnemonicParsing="false" onAction="#toCreateNewSchool" prefWidth="300.0" styleClass="btn-primary" text="Create">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#toEditCurrentSchool" prefWidth="300.0" styleClass="btn-primary" text="Edit">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#toDeleteCurSchool" prefWidth="300.0" styleClass="btn-primary" text="Delete">
                     <VBox.margin>
                        <Insets />
                     </VBox.margin>
                  </Button>
               </children>
               <HBox.margin>
                  <Insets top="40.0" />
               </HBox.margin>
            </VBox>
         </children>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
      </HBox>
   </children>

</Pane>
